{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "types": [
      "node",
      "@nuxt/schema",
      "@nuxt/types"
    ],
    "baseUrl": ".",
    "paths": {
      "#imports": [
        "./.nuxt/imports"
      ]
    }
  },
  "include": [
    "src",
    "./",
    "./.nuxt"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.vue",
    "**/*.test.vue",
    "scripts",
    "vitest.config.ts",
    "test-configs"
  ]
}
